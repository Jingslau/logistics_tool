<Window
    x:Class="waerp_management.loginHandling.loginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:errorhandling="clr-namespace:waerp_management.errorHandling"
    xmlns:local="clr-namespace:waerp_management.main"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="http://sharpVectors.net"
    xmlns:validation="clr-namespace:waerp_management.ValidationRulesSet"
    Title="Waerp Tool-Management Login"
    Width="600"
    Height="400"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="{DynamicResource MaterialDesignFont}"
    ResizeMode="NoResize"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Border
        BorderBrush="Transparent"
        BorderThickness="2"
        CornerRadius="10">

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Rectangle
                Grid.ColumnSpan="2"
                RadiusX="10"
                RadiusY="10">

                <Rectangle.Fill>

                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">

                        <GradientStop Offset="0" Color="#878787" />

                        <GradientStop Offset="0.5" Color="#9E9E9E" />

                    </LinearGradientBrush>

                </Rectangle.Fill>

            </Rectangle>
            <Image
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Width="400"
                Height="400"
                Margin="0,0,400,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="\assets\images\logos\SplashLogoBg.png" />
            <Button
                Grid.ColumnSpan="2"
                Width="50px"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="CloseButton"
                Content="{materialDesign:PackIcon Close}"
                Foreground="#444444"
                Style="{StaticResource MaterialDesignFlatLightButton}"
                ToolTip="Applikation beenden" />


            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <Image
                        Grid.Row="0"
                        Width="220"
                        Margin="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="\assets\images\logos\SplashScreenLogoBlack.png" />
                    <!--<TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Light">
                        .stockpilot
                    </TextBlock>-->
                </StackPanel>

                <TextBlock
                    x:Name="CurrentVersion"
                    Grid.Row="1"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="13"
                    FontWeight="Light">
                    VERSION 0.3
                </TextBlock>

            </Grid>

            <StackPanel
                Grid.Column="1"
                Margin="20"
                VerticalAlignment="Center">

                <TextBox
                    x:Name="usernameP"
                    MaxWidth="400"
                    Margin="10px"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Benutzername"
                    materialDesign:ValidationAssist.Background="Transparent"
                    AcceptsReturn="False"
                    Background="#AEAEAE"
                    Foreground="Black"
                    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                    Style="{StaticResource MaterialDesignFilledTextBox}"
                    TextWrapping="Wrap">
                    <TextBox.Text>
                        <Binding Path="username" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validation:UsernameValidation />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <PasswordBox
                    x:Name="PasswordInput"
                    MaxWidth="400"
                    Margin="10px"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Passwort"
                    materialDesign:ValidationAssist.Background="Transparent"
                    Background="#AEAEAE"
                    Foreground="Black"
                    IsEnabled="{Binding ElementName=RevealPasswordFilledEnabled, Path=IsChecked}"
                    Style="{StaticResource MaterialDesignFilledRevealPasswordBox}" />
                <Button
                    Width="200"
                    Margin="10,30"
                    Background="#A02619"
                    Click="loginHandler"
                    Content="Anmelden"
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}" />

            </StackPanel>
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    x:Name="ShowSettingsBtn"
                    Width="50px"
                    Click="ShowSettingsBtn_Click"
                    Content="{materialDesign:PackIcon Cog}"
                    Foreground="#717171"
                    Style="{StaticResource MaterialDesignFlatLightButton}"
                    ToolTip="Verbindungseinstellungen anpassen" />

            </StackPanel>
            <materialDesign:Snackbar
                x:Name="SnackbarError"
                Grid.Column="3"
                ActionButtonPlacement="SeparateLine"
                Background="#FFB75348"
                IsActive="False">
                <materialDesign:SnackbarMessage Content="Benutzername oder Passwort sind falsch!" FontWeight="Bold" />
            </materialDesign:Snackbar>
        </Grid>
    </Border>
</Window>
