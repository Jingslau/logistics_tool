<UserControl
    x:Class="waerp_management.application.returnItem.ReturnItemSelect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:waerp_management.application.returnItem"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1000"
    d:DesignWidth="1086.625"
    Background="#EEEEEE"
    FontFamily="{DynamicResource MaterialDesignFont}"
    Foreground="black"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="QuantityCell" TargetType="{x:Type TextBlock}">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>
        <Style x:Key="SingleColDataGrid" TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="15,0,0,0" />
        </Style>
        <Style x:Key="GridCellPad" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="15,10,0,0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="LeftGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#444444" />
            <Setter Property="Margin" Value="15,0,0,0" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#444444" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </UserControl.Resources>
    <Grid Style="{StaticResource GridBackgroundMainFrame}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="20,20,50,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                x:Name="instructionText"
                Grid.Column="0"
                Margin="20,20,20,10"
                FontSize="20"
                FontWeight="Light"
                Text="Bitte wählen Sie einen Artikel aus und dann die gewünscht Aktion."
                TextWrapping="Wrap" />
            <Button
                x:Name="resetSearchBtn"
                Grid.Column="1"
                Width="200"
                HorizontalAlignment="Right"
                Click="resetSearch"
                IsEnabled="True"
                Style="{StaticResource ReportButton}">
                <TextBlock Text="Suche zurücksetzen" />
            </Button>
        </Grid>
        <TextBlock
            x:Name="breadcrumbData"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="50,10,20,10"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#414141"
            Text="" />
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>
        </Grid>

        <Grid Grid.Row="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <CheckBox
                    x:Name="toggleUsers"
                    Click="toggleAllUsers"
                    Content="Alle Mitarbeiter anzeigen"
                    IsChecked="True"
                    Style="{StaticResource MaterialDesignFilterChipCheckBox}" />

            </StackPanel>

            <DataGrid
                x:Name="userData"
                Grid.Row="1"
                Margin="50,0,50,25"
                IsEnabled="False"
                ItemsSource="{Binding Path=userData}"
                SelectionChanged="userData_SelectionChanged">
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="MinHeight" Value="40" />
                        <Setter Property="MaxHeight" Value="40" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#A94C42" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>

                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=surname}"
                        ElementStyle="{StaticResource SingleColDataGrid}"
                        Header="Nachname"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <DataGrid
                x:Name="dataGridFilter"
                Grid.Column="1"
                Margin="50,25,50,0"
                ItemsSource="{Binding Path=filterData}"
                SelectionChanged="filterData_SelectionChanged">
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="MinHeight" Value="40" />
                        <Setter Property="MaxHeight" Value="40" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#A94C42" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=name}"
                        ElementStyle="{StaticResource SingleColDataGrid}"
                        Header="Suchfilter"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="backBtn"
                    Width="100"
                    Margin="10"
                    Click="getLastStage"
                    IsEnabled="False"
                    Style="{StaticResource NormalButton}">
                    <TextBlock Text="Zurück" />
                </Button>
                <Button
                    x:Name="nextBtn"
                    Width="100"
                    Click="getNextStage"
                    IsEnabled="False"
                    Style="{StaticResource NormalButton}">
                    <TextBlock Text="Weiter" />
                </Button>
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="50,0,50,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    x:Name="DelteRentBtn"
                    Grid.Column="1"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Stretch"
                    Click="DelteRentBtn_Click"
                    IsEnabled="False"
                    Style="{StaticResource NormalButton}">
                    <TextBlock Text="Entnahme löschen" />
                </Button>
                <TextBox
                    x:Name="searchBox"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,50,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Suche"
                    AcceptsReturn="True"
                    Cursor="Hand"
                    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                    Style="{StaticResource MaterialDesignFilledTextBox}"
                    TextChanged="searchBox_TextChanged"
                    TextWrapping="Wrap" />
                <Button
                    x:Name="OpenRentBtn"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Stretch"
                    Click="openRentWindow"
                    IsEnabled="False"
                    Style="{StaticResource NormalButton}">
                    <TextBlock Text="Einlagern" />
                </Button>
            </Grid>
            <DataGrid
                x:Name="dataGridItems"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Margin="50,0,50,50"
                ItemsSource="{Binding Path=itemData}"
                SelectionChanged="ItemData_SelectionChanged">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Click="CopyItemIdent" Header="Artikelnummer kopieren" />

                        <MenuItem Click="CopyDescription" Header="Beschreibung kopieren" />

                        <MenuItem Click="CopyAll" Header="Zeile kopieren" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="MinHeight" Value="100" />
                        <Setter Property="MaxHeight" Value="100" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#A94C42" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>

                        </Style.Triggers>

                    </Style>

                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=item_ident}"
                        ElementStyle="{StaticResource GridCellPad}"
                        Header="Artikelnummer"
                        HeaderStyle="{StaticResource LeftGridHeaderStyle}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="2*"
                        Binding="{Binding Path=item_description}"
                        ElementStyle="{StaticResource GridCellPad}"
                        Header="Beschreibung"
                        HeaderStyle="{StaticResource LeftGridHeaderStyle}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=rent_quantity}"
                        ElementStyle="{StaticResource QuantityCell}"
                        Header="Bestand"
                        HeaderStyle="{StaticResource CenterGridHeaderStyle}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=createdAt}"
                        ElementStyle="{StaticResource QuantityCell}"
                        Header="Datum"
                        HeaderStyle="{StaticResource CenterGridHeaderStyle}"
                        IsReadOnly="True" />
                    <DataGridTemplateColumn
                        Width="2*"
                        Header="Bild"
                        HeaderStyle="{StaticResource CenterGridHeaderStyle}"
                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image
                                    Width="100"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="{Binding Path=item_image_path}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>


        <Grid
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Width="auto"
            Margin="20,20,20,20">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>



        </Grid>
    </Grid>
</UserControl>
