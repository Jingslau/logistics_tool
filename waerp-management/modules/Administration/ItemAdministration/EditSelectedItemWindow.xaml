<Window
    x:Class="waerp_management.application.Administration.ItemAdministration.EditSelectedItemWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:waerp_management.ValidationRulesSet.ViewModels"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:validation="clr-namespace:waerp_management.ValidationRulesSet"
    Title="RentSelectedItemView"
    Width="900"
    Height="700"
    AllowsTransparency="True"
    Background="Transparent"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:ItemAdministrationViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="5*" />

            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.RowSpan="4"
            Grid.ColumnSpan="2"
            Style="{StaticResource BorderDialog}">
            <Rectangle Margin="0" Style="{StaticResource RectangleDialogAdministration}" />
        </Border>

        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="2"
            VerticalAlignment="Center"
            FontSize="18"
            FontWeight="DemiBold"
            Text="Artikel bearbeiten"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="20,0,20,0"
            Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="ImagePath"
                Grid.Column="0"
                Margin="0,0,20,0"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="Artikelbild"
                AcceptsReturn="False"
                IsEnabled="False"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="" />
            <Button
                x:Name="ImagePathBtn"
                Grid.Column="1"
                Margin="0,0,0,0"
                VerticalAlignment="Center"
                Click="ImagePathBtn_Click"
                Style="{StaticResource NormalButton}">
                <materialDesign:PackIcon Kind="File" />
            </Button>
        </Grid>

        <StackPanel
            Grid.Row="1"
            Margin="0,20,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <TextBox
                x:Name="ItemIdent"
                Margin="20,0,20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="Artikelnummer"
                AcceptsReturn="False"
                IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                MaxLength="40"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                TextWrapping="Wrap">
                <TextBox.Text>
                    <Binding Path="ItemIdent" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:TextFieldValidation />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ComboBox
                x:Name="Filter1"
                Margin="20,20,20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Filter 1"
                IsEditable="False"
                IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"
                SelectionChanged="Filter1_SelectionChanged"
                Style="{StaticResource MaterialDesignFilledComboBox}" />

            <ComboBox
                x:Name="Filter2"
                Margin="20,20,20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Filter 2"
                IsEditable="False"
                IsEnabled="False"
                SelectionChanged="Filter2_SelectionChanged"
                Style="{StaticResource MaterialDesignFilledComboBox}" />
            <ComboBox
                x:Name="Filter3"
                Margin="20,20,20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Filter 3"
                IsEditable="False"
                IsEnabled="False"
                SelectionChanged="Filter3_SelectionChanged"
                Style="{StaticResource MaterialDesignFilledComboBox}" />
            <ComboBox
                x:Name="Filter4"
                Margin="20,20,20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Filter 4"
                IsEditable="False"
                IsEnabled="False"
                SelectionChanged="Filter4_SelectionChanged"
                Style="{StaticResource MaterialDesignFilledComboBox}" />
            <ComboBox
                x:Name="Filter5"
                Margin="20,20,20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Filter 5"
                IsEditable="False"
                IsEnabled="False"
                Style="{StaticResource MaterialDesignFilledComboBox}" />

            <TextBox
                x:Name="ItemDescription"
                Margin="20,20,20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="Bezeichnung 1"
                AcceptsReturn="False"
                IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                MaxLength="50"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                TextWrapping="Wrap">
                <TextBox.Text>
                    <Binding Path="ItemDescription1" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:TextFieldValidation />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <TextBox
                x:Name="ItemDescription2"
                Margin="20,20,20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="Bezeichnung 2"
                AcceptsReturn="False"
                IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                MaxLength="50"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                TextWrapping="Wrap" />

        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="2"
            Margin="20,20,20,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <CheckBox
                x:Name="OrderCheckbox"
                Checked="OrderCheckbox_Checked"
                Content="Bestellbar"
                Style="{StaticResource MaterialDesignCheckBox}"
                Unchecked="OrderCheckbox_Unchecked" />
            <ComboBox
                x:Name="VendorCombobox"
                Margin="0,20,0,20"
                materialDesign:HintAssist.Hint="Lieferant"
                IsEnabled="False" />
            <TextBox
                x:Name="MinQuant_Text"
                Margin="0,0,0,20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Min.-Bestand"
                IsEnabled="False"
                MaxLength="3"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                TextChanged="MinQuant_Text_TextChanged">
                <TextBox.Text>
                    <Binding Path="ItemMinQuant" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:TextFieldValidation />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <TextBox
                x:Name="MinOrder_Text"
                Margin="0,0,0,20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Min.-Bestellmenge"
                IsEnabled="False"
                MaxLength="3"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                TextChanged="MinOrder_Text_TextChanged">
                <TextBox.Text>
                    <Binding Path="ItemMinOrder" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:TextFieldValidation />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="price_Text"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Preis"
                    IsEnabled="False"
                    MaxLength="6"
                    PreviewTextInput="price_Text_PreviewTextInput"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                    <TextBox.Text>
                        <Binding Path="ItemPrice" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validation:MoneyValidation />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ComboBox
                    x:Name="CurrencyCombobox"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Währung"
                    IsEditable="False"
                    IsEnabled="False"
                    Style="{StaticResource MaterialDesignFilledComboBox}" />
            </Grid>
            <Border
                Grid.Row="0"
                Grid.Column="3"
                Width="300"
                Height="200"
                Padding="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#9E9E9E"
                BorderBrush="#EEEEEE"
                BorderThickness="2"
                CornerRadius="5">
                <Image x:Name="ItemImage" />

            </Border>

        </StackPanel>
        <Grid
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="10"
            HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="CloseDialog"
                Grid.Column="0"
                Width="200"
                Margin="10,30,0,0"
                HorizontalAlignment="left"
                Click="CloseDialog_Click"
                Content="Abbrechen"
                Style="{StaticResource CancleButton}" />
            <Button
                x:Name="SaveChanges"
                Grid.Column="1"
                Width="200"
                Margin="0,30,10,0"
                HorizontalAlignment="Right"
                Click="SaveChanges_Click"
                Content="Änderungen speichern"
                Style="{StaticResource NormalButton}" />



        </Grid>

    </Grid>
</Window>